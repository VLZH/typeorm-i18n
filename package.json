{
    "name": "typeorm-i18n",
    "version": "0.2.0-rc.1",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "http://github.com/vlzh/typeorm-i18n"
    },
    "bugs": {
        "url": "https://github.com/vlzh/typeorm-i18n/issues"
    },
    "author": "vlzh",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "public": "build & yarn publish",
        "start": "tsc --watch",
        "test": "jest",
        "lint": "eslint .",
        "fix": "prettier --write .",
        "environment:start-db": "docker run --rm -p 5433:5432 -d --name=typeormi18n_test_database -e POSTGRES_PASSWORD=test -e POSTGRES_USER=test -e POSTGRES_DB=test  postgres:11",
        "environment:stop-db": "docker kill typeormi18n_test_database",
        "prepare": "build"
    },
    "dependencies": {
        "typeorm": "^0.2.31"
    },
    "devDependencies": {
        "@types/jest": "^26.0.0",
        "@types/node": "^12.7.5",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "pg": "^8.2.1",
        "prettier": "^2.0.5",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^26.1.0",
        "tslib": "^2.1.0",
        "typescript": "^3.9.5"
    },
    "prettier": {
        "tabWidth": 4
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn fix && yarn lint & yarn test"
        }
    }
}
