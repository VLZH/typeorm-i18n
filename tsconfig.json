{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,

        "moduleResolution": "node",
        "baseUrl": "./src",
        "preserveSymlinks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules", "dist", "tests"]
}
